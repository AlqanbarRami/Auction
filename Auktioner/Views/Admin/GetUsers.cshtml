@using Microsoft.AspNetCore.Identity
@model IEnumerable<Customer>


@{
    ViewData["Title"] = "GetUsers";
}

<h1>GetUsers</h1>

@if (!Model.Any())
{
    <span>No Users Yet</span>
}
else
{
     @foreach (Customer user in Model)
        {
            
              
                <span><strong>Full Name: </strong> @user.FirstName @user.LastName  <strong>Email: </strong>@user.Email </span>
                  <form asp-action="NewAdmin" asp-route-userId="@user.Id" method="post">
                      <button type="submit"  class="btn btn-sm btn-danger">
                            Make Admin
                        </button>
                </form>
        }
}

