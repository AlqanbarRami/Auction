@model CategoryViewModel
@{
    ViewData["Title"] = "AddCategory";
}


<h1>Add Category</h1>

<form asp-controller="Category" asp-action="AddCategory" method="post" class="form-horizontal" role="form">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="category.CategoryName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="category.CategoryName" class="form-control" />
            <span asp-validation-for="category.CategoryName" class="text-danger"></span>
        </div>
    </div>

    
    <div class="form-group">
        <label asp-for="category.Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="category.Description" class="form-control" />
            <span asp-validation-for="category.Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Create New" />
        </div>
    </div>
</form>